<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="module">
    <name>WuBook</name>
    <author>Pranjal Srivastava</author>
    <creationDate>Nov 15, 2010</creationDate>
    <copyright>WuBook Srl</copyright>
    <license>BSD</license>
    <authorEmail>pranjal@codefire.in</authorEmail>
    <authorUrl>http://wubook.net/</authorUrl>
    <version>1.0</version>
    <description>The WuBook plugin allows to insert an online booking system (aka wubook online reception) inside hotel and bed and breakfast sites</description>
    <files>
        <filename module="mod_WuBook">mod_WuBook.php</filename>
    </files>
	 <params>
			  <param name="lcode" type="text" default="123" label="Icode" description="Please Enter Number"/>
			  <param name="avoiddates" type="radio" default="0" label="avoiddates">
				 <option value="0">False </option>
				 <option value="1">True </option>
			</param>
			<param name="avoiddeletion" type="radio" default="0" label="avoiddeletion">
				 <option value="0">False </option>
				 <option value="1">True </option>
			</param>
			<param name="avoidmail" type="radio" default="0" label="avoidmail">
				 <option value="0">False </option>
				 <option value="1">True </option>
			</param>
			<param name="deflang" type="list" default="en" label="deflang">
				 <option value="en">en</option>
				 <option value="it">it</option>
				  <option value="de">de</option>
				 <option value="fr">fr</option>
				  <option value="es">es</option>
				 <option value="pt">pt</option>
				  <option value="ru">ru</option>
				 <option value="nl">nl</option>
			</param>
			<param name="layout" type="list" default="wugle" label="layout">
				 <option value="wugle">wugle </option>
				 <option value="46">46 </option>
				  <option value="wubook">wubook </option>
				 <option value="zak">zak </option>
				  <option value="wcdonald">wcdonald </option>
				 <option value="serious">serious </option>
			</param>
			<param name="wborcss" type="radio" default="0" label="wborcss">
			 <option value="0">False </option>
			 </param>
			 <param name="horizontal" type="radio" default="0" label="horizontal">
				 <option value="0">False </option>
				 <option value="1">True </option>
			</param>
			 <param name="minimal" type="radio" default="false" label="minimal">
				 <option value="false">False </option>
				 <option value="1">True </option>
			</param>
		
	  </params>
   
</install>
